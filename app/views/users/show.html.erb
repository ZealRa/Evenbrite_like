<h1>Profil de <%= @user.first_name %> <%= @user.last_name %></h1>
<p>Description : <%= @user.description %></p>
<p>E-mail : <%= @user.email %></p>

<h2>Événements créés par <%= @user.first_name %></h2>
<% @events.each do |event| %>
  <div>
    <h3><%= event.title %></h3>
    <%= link_to "Voir l'événement", event_path(event) %>
  </div>
<% end %>

<% if current_user == @user %>
  <%= link_to "Modifier mon e-mail", edit_user_registration_path %>
  <%= link_to "Modifier mon mot de passe", edit_user_password_path %>
<% end %>